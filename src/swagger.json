{
  "openapi": "3.0.0",
  "info": {
    "title": "Dummy API",
    "version": "1.0.0",
    "description": "A simple dummy API for testing Swagger UI"
  },
  "tags": [
    {
      "name": "users",
      "description": "Operations related to users (login, register, etc.)"
    },
    {
      "name": "posts",
      "description": "Operations related to posts (create, view, delete, etc.)"
    },
    {
      "name": "Admin-Only",
      "description": "Endpoints and operations accessible exclusively by admin users."
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/users/login": {
      "post": {
        "tags": ["users"],
        "summary": "Login User",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "oneOf": [
                  {
                    "required": ["email", "password"],
                    "properties": {
                      "email": {
                        "type": "string",
                        "example": "chinu@gmail.com"
                      },
                      "password": {
                        "type": "string",
                        "example": "mypassword123"
                      }
                    }
                  },
                  {
                    "required": ["username", "password"],
                    "properties": {
                      "username": {
                        "type": "string",
                        "example": "chinu"
                      },
                      "password": {
                        "type": "string",
                        "example": "mypassword123"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "tags": ["users"],
        "summary": "Logout the current user",
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "User logged out successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logged out successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized – No valid token provided"
          }
        }
      }
    },
    "users/registerUser": {
      "post": {
        "tags": ["users"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registration success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterUserResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/usres/currentUser": {
      "get": {
        "tags": ["users"],
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "Current User Fetched SuuceeFully",

            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Current User Fetched SuuceeFully"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/users/getAllUser": {
      "get": {
        "tags": ["Admin-Only"],
        "summary": "Get all users",
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "example": "67977b9fc3043def730ab4f1"
                      },
                      "username": {
                        "type": "string",
                        "example": "chinu"
                      },
                      "email": {
                        "type": "string",
                        "example": "chinu@gmail.com"
                      },
                      "fullname": {
                        "type": "string",
                        "example": "Chinmaya"
                      },
                      "Posts": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "example": [
                          "679a79d9b4dc10c68390156f",
                          "679b7f1d474c43af0dc44273"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },




    "/posts/viewPost": {
      "get": {
        "summary": "Get user details and their posts",
        "description": "This endpoint returns user information along with their posts. Authorization is required.",
        "operationId": "getUserAndPosts",
        "tags": ["posts"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched user data and posts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ViewPostResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized – Invalid or missing token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "posts/createPost": {
      "post": {
        "summary": "Create a new post",
        "description": "Creates a new post with a title, content, and an image file. Requires authentication.",
        "tags": ["posts"],
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Greet"
                  },
                  "content": {
                    "type": "string",
                    "example": "JGreet- > Good Morning"
                  },
                  "ContentImage": {
                    "type": "string",
                    "format": "binary",
                    "description": "Upload image file (.jpg, .png)"
                  }
                },
                "required": ["title", "content", "ContentImage"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePostResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Missing or invalid data"
          },
          "401": {
            "description": "Unauthorized - Missing or invalid token"
          }
        }
      }
    },
    "posts/deletePost/{id}": {
      "delete": {
        "summary": "Delete a post by ID",
        "description": "Deletes a post using its ID. Requires authentication.",
        "tags": ["posts"],
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the post to delete",
            "schema": {
              "type": "string",
              "example": "67fca87e4f63bd99b14200a4"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeletePostResponse"
                }
              }
            }
          },
          "404": {
            "description": "Post not found"
          },
          "401": {
            "description": "Unauthorized - Missing or invalid token"
          }
        }
      }
    },
    "posts/update/{id}": {
      "patch": {
        "summary": "Update a post by ID",
        "description": "Updates a post's title and content. Requires authentication.",
        "tags": ["posts"],
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the post to update",
            "schema": {
              "type": "string",
              "example": "679b7f1d474c43af0dc44273"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "The Last Light"
                  },
                  "content": {
                    "type": "string",
                    "example": "Girl restores lost sun"
                  }
                },
                "required": ["title", "content"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UpdatePostResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Missing or invalid fields"
          },
          "404": {
            "description": "Post not found"
          },
          "401": {
            "description": "Unauthorized - Missing or invalid token"
          }
        }
      }
    },
    "posts/getAllPost": {
      "get": {
        "summary": "Get all posts",
        "tags": ["Admin-Only"],
        "description": "Get all posts",
        "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
        "responses": {
          "200": {
            "description": "List out all Posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "token"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "67977b9fc3043def730ab4f1"
          },
          "username": {
            "type": "string",
            "example": "chinu"
          },
          "email": {
            "type": "string",
            "example": "chinu@gmail.com"
          },
          "fullname": {
            "type": "string",
            "example": "Chinmaya"
          },
          "Posts": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": []
          }
        }
      },
      "RegisterUserRequest": {
        "type": "object",
        "required": ["username", "fullname", "email", "password"],
        "properties": {
          "username": {
            "type": "string",
            "example": "chinu"
          },
          "fullname": {
            "type": "string",
            "example": "alex Duo"
          },
          "email": {
            "type": "string",
            "example": "alex@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "alex@#1234"
          }
        }
      },
      "RegisterUserResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "User registered Successfully"
          }
        }
      },
      "ViewPostResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 200
          },
          "message": {
            "type": "string",
            "example": "Fetched Post Successfully"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserPost"
            }
          }
        }
      },
      "UserPost": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "6797c16a74bfb9709c494ec6"
          },
          "username": {
            "type": "string",
            "example": "chunu"
          },
          "email": {
            "type": "string",
            "example": "chunu@gmail.com"
          },
          "allPosts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Post"
            }
          }
        }
      },
      "Post": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "679a79d9b4dc10c68390156f"
          },
          "title": {
            "type": "string",
            "example": "RedTape"
          },
          "content": {
            "type": "string",
            "example": "nikhil Demo"
          },
          "ContentImage": {
            "type": "string",
            "example": "http://res.cloudinary.com/dk5gqsuqf/image/upload/v1738176985/de7nkiviccofrwrrhjkg.jpg"
          }
        }
      },
      "CreatePostResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 200
          },
          "message": {
            "type": "string",
            "example": "Post Created SuuceeFully"
          },
          "data": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "example": "Jordan"
              },
              "content": {
                "type": "string",
                "example": "Jordan air Max"
              },
              "ContentImage": {
                "type": "string",
                "example": "http://res.cloudinary.com/dk5gqsuqf/image/upload/v1744611454/tnh4ils0tvi0b2o7ykvi.png"
              },
              "user": {
                "type": "string",
                "example": "6797c16a74bfb9709c494ec6"
              },
              "_id": {
                "type": "string",
                "example": "67fca87e4f63bd99b14200a4"
              },
              "__v": {
                "type": "integer",
                "example": 0
              }
            }
          }
        }
      },
      "DeletePostResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 200
          },
          "data": {
            "type": "object",
            "example": {}
          },
          "message": {
            "type": "string",
            "example": "Post deleted Successfully !"
          }
        }
      },
      "UpdatePostResponse": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 200
          },
          "data": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "example": "The Last Light"
              },
              "content": {
                "type": "string",
                "example": "Girl restores lost sun"
              }
            }
          }
        }
      }
    }
  }
}
